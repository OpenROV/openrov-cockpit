{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/src/cockpit.js",
			"stopOnEntry": false,
			"args": [],
			"cwd": "${workspaceRoot}",
			"preLaunchTask": null,
			"runtimeExecutable": null,
			"runtimeArgs": [
				"--nolazy"
			],
			"env": {
				"NODE_ENV": "development",
				"DEV_MODE": "true",
				"PLATFORM": "mock",
				"BOARD":	"mock3000",
				"USE_MOCK": "false",
				"HARDWARE_MOCK": "false",
				"CPU_MOCK": "123MOCK",
				"DEBUG": "bridge, mcu, cpu, *:Notifications, app:mjpeg*",
				"debug_commands": "true",
				"port": "8080",
				"video_port": "8081",
				"configfile": "/tmp/rovconfig.json",
				"video_url": "http://192.168.1.222:8081/bmimg",
				"plugins__ui-manager__selectedUI": "new-ui",
				"pluginsDownloadDirectory": "/tmp/plugins",
				"cacheDirectory": "/tmp/cache",
				"DATADIR": "/tmp",
				"IGNORE_CACHE": "true"
			},
            "console": "internalConsole",			          
			"sourceMaps": false,
			"outDir": null
		},
		{
			"name": "Attach",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "restart": false,
            "sourceMaps": false,
            "outDir": null,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": null
        
		}
	]
}
