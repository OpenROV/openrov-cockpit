<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <!-- The following viewport code is intended to fullscreen the cockpit and prevent scrolling -->
  <meta id="Viewport" name="viewport" width="initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no">
  <script type='text/javascript' src="../components/jquery/dist/jquery.min.js"></script>
  <script type='text/javascript' src="../js/utilities.js"></script>
  <script type="text/javascript" src="../components/webcomponentsjs/webcomponents-lite.js"></script>

  <script>
    window.Polymer = window.Polymer || {};
    window.Polymer.dom = 'shadow';
  </script>
  <link rel="import" href="../components/polymer/polymer.html">


  <link rel="import" href="<%= webComponent %>">


  <title><%= title %></title>


</head>

<body>
<template id='tt' is="dom-bind">
<<%= uiElement %> id="<%= uiId %>" event-emitter={{cockpitEventEmitter}}></<%= uiElement %>>
</template>
  <script>
  window.cockpit = window.opener.cockpit;
  window.cockpit_int = window.opener.cockpit_int;
  $( document ).ready(function() {
    $('#tt')[0]['cockpit-event-emitter'] = window.opener.cockpit;
  });

  <%- scriptBlock %>
  </script>

</body>
</html>
